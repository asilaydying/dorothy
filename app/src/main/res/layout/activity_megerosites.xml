<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="hu.uniobuda.nik.dorothy.Megerosites">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/megerosites_txtcim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/megerosites_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/hello_world"
                    android:textColor="#fff" />

                <TableLayout
                    android:id="@+id/megerosites_tableLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Kosarszumma"
                    android:layout_weight="10.06">


                </TableLayout>

                <EditText
                    android:id="@+id/megerosites_megjegyzes"
                    style="@style/WhitePower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Megjegyzés(nagy címlet)" />

                <Button
                    android:id="@+id/megerosites_savebutton"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rendelés leadása" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/preLoader"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
